{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "declaration": true,
    "stripInternal": true,
    "verbatimModuleSyntax": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "rootDir": ".",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
